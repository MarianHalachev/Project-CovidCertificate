@model CovidCertificate.ViewModels.SchoolAdmins.SchoolAdminIndexViewModel

<h1>School admin user list</h1>

<p>Invalid certificate: @Model.TotalTestsNextWeek</p>
<h2>Teacher list</h2>
<table class="table table-bordered table-hover">
    @if (Model.Teachers.Any())
    {
        <thead>
            <tr>
                <th>Full name</th>
                <th>Has valid sertificate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teachers)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@(item.HasValidCertificate?"Yes":"No")</td>
                </tr>
            }
        </tbody>
    }
</table>
<h2>Student list</h2>

<table class="table table-bordered table-hover">
    @if (Model.Students.Any())
    {
        <thead>
            <tr>
                <th>Full name</th>
               <th>Has valid sertificate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Students)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@(item.HasValidCertificate?"Yes":"No")</td>
                </tr>
            }
        </tbody>
    }
</table>


