@model CovidCertificate.ViewModels.Certificate.DetailsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="IssueDate"></label>
        <input asp-for="IssueDate" class="form-control" placeholder="IssueData..." value="@Model.IssueDate" />
    </div>
    <div class="form-group">
        <label asp-for="ValidMonths"></label>
        <input asp-for="ValidMonths" class="form-control" placeholder="ValidMonths..." value="@Model.ValidMonths" />
    </div>
    <div class="form-group">
        <label asp-for="IsValid"></label>
        <textarea asp-for="IsValid" class="form-control" placeholder="IsValid...">@Model.IsValid</textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn chushka-bg-color">Edit</button>
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn chushka-bg-color">Cancel</a>
    </div>
</form>