@using Microsoft.AspNetCore.Identity
@using CovidCertificate.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Student"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello student @User.Identity.Name!</a>
            </li>
        }
        else if (User.IsInRole("Teacher"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello teacher @User.Identity.Name!</a>
            </li>
        }
        else if (User.IsInRole("SchoolAdmin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello school admin @User.Identity.Name!</a>
            </li>
        }
        else if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello admin @User.Identity.Name!</a>
            </li>
        }


        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark"asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-area="" asp-controller="Schools" asp-action="RegisterSchool">Register school</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-controller="Account" asp-action="Register">Register user account</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-controller="Account" asp-action="Login">Login</a>
        </li>

    }
</ul>
